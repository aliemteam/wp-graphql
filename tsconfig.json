{
    "compilerOptions": {
        "target": "es5",
        "outDir": "lib",
        "inlineSourceMap": true,
        "sourceMap": true,
        "lib": [
            "dom",
            "es5",
            "scripthost",
            "es2015"
        ],
        "experimentalDecorators": true,
        "declaration": true,
        "module": "commonjs",
        "strictNullChecks": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true
    },
    "include": [
        "src"
    ]
}